{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Business/Group Handle Profile Credential",
  "type": "object",
  "required": [
    "@context",
    "id",
    "type",
    "issuer",
    "identifier",
    "name",
    "issuanceDate",
    "expirationDate",
    "credentialSubject"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "https://www.w3.org/2018/credentials/v1",
          "https://raw.githubusercontent.com/iampawankumar/qikfox-verifiable-credential-schemas-v1/main/business-handle-user-info-credential-v1.jsonld",
          "https://w3id.org/security/bbs/v1",
          "https://w3id.org/security/suites/jws-2020/v1"
        ]
      },
      "minItems": 4,
      "maxItems": 4
    },
    "id": {
      "type": "string",
      "format": "uri"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SelfSignedCredential", "VerifiableCredential", "UserInfoCredential"]
      },
      "minItems": 3,
      "maxItems": 3
    },
    "issuer": {
      "type": "string"
    },
    "identifier": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "businessName": {
          "type": "string"
        },
        "businessCategory": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "openingDate": {
          "type": "string",
          "format": "date"
        },
        "telephone": {
          "type": "string"
        },
        "websiteNumber": {
          "type": "string"
        },
        "businessLocation": {
          "type": "string"
        },
        "serviceArea": {
          "type": "string"
        },
        "businessHours": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "day": {
                "type": "string",
                "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
              },
              "opens": {
                "type": "string",
                "format": "time"
              },
              "closes": {
                "type": "string",
                "format": "time"
              }
            },
            "required": ["day", "opens", "closes"]
          }
        },
        "ipAddress": {
          "type": "string"
        },
        "stacks": {
          "type": "string"
        },
        "linkedin": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        },
        "facebook": {
          "type": "string"
        },
        "instagram": {
          "type": "string"
        },
        "gmail": {
          "type": "string"
        },
        "cid": {
          "type": "string"
        },
        "handle": {
          "type": "string"
        },
        "defaultValue": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "public": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "private": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Organization"]
          },
          "minItems": 1,
          "maxItems": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
