{
  "$schema": "http://json-schema.org/draft-07/schema#",
"title": "WalletCredentials"
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["id", "name"]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "claims": {
          "type": "object",
          "properties": {
            "userID": {
              "type": "string"
            }
          },
          "required": ["userID"]
        },
        "design": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "brand": {
              "type": "string"
            },
            "image": {
              "type": "string",
              "format": "uri"
            },
            "bgColor": {
              "type": "string",
              "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            }
          },
          "required": ["name", "brand", "image", "bgColor"]
        }
      },
      "required": ["id", "claims", "design"]
    }
  },
  "required": ["@context", "id", "type", "issuer", "issuanceDate", "credentialSubject"]
}
